generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model users {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  image     String
  createdAt DateTime @default(now())
}

model Product {
  id          Int       @id @default(autoincrement())
  name        String
  description String
  price       Decimal
  image       String
  category    Category? @relation(fields: [category_id], references: [id])
  category_id Int
}

model Category {
  id          Int       @id @default(autoincrement())
  name        String
  description String
  products    Product[]
}
